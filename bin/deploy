#!/bin/bash

set -ex
IPADDR=$1
USERNAME=$USER

ssh -t isucon@$IPADDR "cd /home/isucon/webapp/perl && git pull && ./env.sh carton install && sudo ./bin/copy-file.sh && sudo sysctl -p && sudo ./bin/logrotate.sh && sudo service nginx restart && sudo service memcached restart && sudo service mysql restart && echo 'sleep 3s' && sleep 3 && sudo service supervisord reload"
